@inherits FooterViewModel

<footer class="footer">
    <div class="footer__container container">
        @if (Config?.Footer.SocialLinks.Count > 0)
        {
            <div class="footer__social">
                @foreach (var social in Config.Footer.SocialLinks.Where(s => !string.IsNullOrEmpty(s.Url)))
                {
                    @if (social.Url.StartsWith("/"))
                    {
                        <a href="@social.Url" 
                           class="footer__social-link" 
                           aria-label="@social.Platform">
                            <SocialIcon Platform="@social.Platform" />
                        </a>
                    }
                    else
                    {
                        <a href="@social.Url" 
                           class="footer__social-link" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           aria-label="@social.Platform">
                            <SocialIcon Platform="@social.Platform" />
                        </a>
                    }
                }
            </div>
        }

        <p class="footer__copyright">Copyright Â© @DateTime.Now.Year @Config?.Footer.Copyright</p>
    </div>
</footer>
