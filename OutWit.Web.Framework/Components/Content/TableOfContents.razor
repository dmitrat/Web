@inherits TableOfContentsViewModel

<nav class="table-of-contents" aria-label="Table of contents">
    <h4 class="table-of-contents__title">On this page</h4>
    <ul class="table-of-contents__list">
        @foreach (var entry in Entries)
        {
            <li class="table-of-contents__item table-of-contents__item--level-@entry.Level">
                <a href="#@entry.Id" class="table-of-contents__link">@entry.Title</a>
                @if (entry.Children.Count > 0)
                {
                    <ul class="table-of-contents__sublist">
                        @foreach (var child in entry.Children)
                        {
                            <li class="table-of-contents__item table-of-contents__item--level-@child.Level">
                                <a href="#@child.Id" class="table-of-contents__link">@child.Title</a>
                            </li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
</nav>
